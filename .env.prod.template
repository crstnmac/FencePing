# Production Environment Variables Template
# Copy this file to .env.prod and fill in the values

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
POSTGRES_DB=geofence
POSTGRES_USER=geofence_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# PostgreSQL connection URL (assembled from above)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379
REDIS_MAX_MEMORY=512mb
REDIS_LOG_LEVEL=warning

# Redis connection URL (assembled from above)
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# ==============================================
# KAFKA CONFIGURATION
# ==============================================
KAFKA_BROKERS=redpanda:9092

# ==============================================
# MQTT CONFIGURATION
# ==============================================
MQTT_BROKER_URL=mqtt://mqtt-broker:1883
MQTT_PORT=1883
MQTT_WS_PORT=8083
MQTT_WSS_PORT=8084

# EMQX Dashboard Configuration
EMQX_DASHBOARD_PORT=18083
EMQX_DASHBOARD_USERNAME=admin
EMQX_DASHBOARD_PASSWORD=your_secure_emqx_password_here
EMQX_LOG_LEVEL=warning

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=production

# JWT Secret (generate a secure random string)
JWT_SECRET=your_jwt_secret_here

# CORS Origin (your frontend domain)
CORS_ORIGIN=https://your-domain.com

# Log Level
LOG_LEVEL=info

# ==============================================
# PORT CONFIGURATION
# ==============================================
API_PORT=3001
DASHBOARD_PORT=3000

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
NEXT_PUBLIC_API_URL=https://api.your-domain.com

# Map tiles configuration (optional)
TILE_URL=https://api.maptiler.com/maps/streets-v2/{z}/{x}/{y}.png
TILE_KEY=your_maptiler_key_here

# ==============================================
# INTEGRATION SECRETS
# ==============================================

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Google Sheets Integration
GOOGLE_SERVICE_ACCOUNT_JSON={"type": "service_account", "project_id": "your-project"}

# Notion Integration
NOTION_SECRET=your_notion_secret_here

# WhatsApp/Twilio Integration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# ==============================================
# DOCKER CONFIGURATION
# ==============================================
IMAGE_TAG=latest

# ==============================================
# SECURITY NOTES
# ==============================================
# 1. Generate strong passwords for all services
# 2. Use proper secrets management in production (Docker secrets, K8s secrets)
# 3. Never commit this file with real values to version control
# 4. Rotate secrets regularly
# 5. Use environment-specific secrets
# 6. Consider using a secrets management service (HashiCorp Vault, AWS Secrets Manager)