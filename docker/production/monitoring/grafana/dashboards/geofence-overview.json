{
  "dashboard": {
    "id": null,
    "title": "Geofence System Overview",
    "tags": ["geofence", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Response Time",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(http_request_duration_seconds{job=\"geofence-api\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Active Devices",
        "type": "stat",
        "targets": [
          {
            "expr": "count(up{job=\"geofence-dashboard\"})",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "System Health",
        "type": "graph",
        "targets": [
          {
            "expr": "up{job=~\"geofence-.*\"}",
            "refId": "A",
            "legendFormat": "{{job}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}