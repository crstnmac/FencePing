# Production Environment Variables for GeoFence Platform
# Copy this file to .env.prod and update with your production values

# Database Configuration
POSTGRES_DB=geofence
POSTGRES_USER=geofence_user
POSTGRES_PASSWORD=your_secure_db_password_here
POSTGRES_PORT=5432
DATABASE_URL=postgresql://geofence_user:your_secure_db_password_here@postgres:5432/geofence

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# MQTT Configuration
MQTT_PORT=1883
MQTT_WS_PORT=8083
MQTT_DASHBOARD_PORT=18083
MQTT_ADMIN_USERNAME=admin
MQTT_ADMIN_PASSWORD=your_secure_mqtt_password_here
MQTT_BROKER_URL=mqtt://mqtt-broker:1883

# Kafka Configuration
KAFKA_BROKERS=kafka:9092

# API Configuration
NODE_ENV=production
PORT=3001
API_BASE_URL=https://your-api-domain.com
FRONTEND_URL=https://your-frontend-domain.com
DASHBOARD_URL=https://your-dashboard-domain.com

# Better Auth Configuration
JWT_SECRET=your_very_secure_jwt_secret_at_least_32_characters_long_for_production
JWT_EXPIRES_IN=7d
BETTER_AUTH_URL=https://your-api-domain.com

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# Integration Credentials (Optional)
GOOGLE_SHEETS_CLIENT_ID=your_google_sheets_client_id
GOOGLE_SHEETS_CLIENT_SECRET=your_google_sheets_client_secret
NOTION_CLIENT_ID=your_notion_client_id
NOTION_CLIENT_SECRET=your_notion_client_secret
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_business_account_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Payment Processing (Optional)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret